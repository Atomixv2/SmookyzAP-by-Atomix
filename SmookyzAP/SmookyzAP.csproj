<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>

    <!-- Build configuration -->
    <Optimize>true</Optimize>               <!-- Optimize for Release -->
    <DebugType>None</DebugType>             <!-- No PDB generation -->
    <DebugSymbols>false</DebugSymbols>      <!-- Don't generate debug symbols -->
    <Deterministic>true</Deterministic>     <!-- Deterministic builds -->

  </PropertyGroup>

</Project>
